{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "checkJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["src/.umi/*"],
      "antd": ["./node_modules/antd"],
      "@mc/*": ["./packages/MessageCenter/src/*"],
      "claim/*": ["./packages/Claim/src/*"],
      "bpm/*": ["./packages/BPM/src/*"],
      "navigator/*": ["./packages/Navigator/src/*"],
      "configuration/*": ["./packages/Configuration/src/*"],
      "documentManage/*": ["./packages/DocumentManage/src/*"],
      "claimBasicProduct/*": ["./packages/ClaimBasicProduct/src/*"],
      "basic/*": ["./packages/Basic/src/*"],
      "enum/*": ["./packages/Basic/src/enum/*"],
      "phowb/*": ["./packages/Phowb/src/*"],
      "ckeditor/*": ["./plugins/ckeditor5/build/*"],
      "process/*": ["./packages/Process/*"],
      "mocks/*": ["./__mocks__/*"],
      "sql": ["./packages/SQL/*"],
      "decision/*": ["./packages/Process/NewBusiness/ManualUnderwriting/Pages/Decision/*"],
      "opus/*": ["./packages/Opus/*"],
      "integration/*": ["./packages/Integration/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src",
    "packages",
    "typings.d",
    "config",
    "__mocks__",
    "packages/Claim/src/pages/360/pages/TransactionHistory/PolicyList/Section/Fields/.config.ts",
    "types" // 添加自定义类型声明文件夹
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "tslint:latest",
    "tslint-config-prettier",
    "pages/.umi/*",
    "packages/**/node_modules/*"
  ]
}
